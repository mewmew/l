int LLParser::ParseAlloc(Instruction *&Inst, PerFunctionState &PFS) {
*/

AllocaInst
	: "alloca" OptInalloca OptSwiftError Type OptCommaTypeValue OptCommaAlignment OptCommaAddrSpace MetadataAttachments
;

OptInalloca
	: empty
	| "inalloca"
;

OptSwiftError
	: empty
	| "swifterror"
;

OptCommaTypeValue
	: empty
	| "," Type Value
;

