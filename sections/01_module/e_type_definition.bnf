// ~~~ [ Type Defintion ] ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~

// https://llvm.org/docs/LangRef.html#structure-type

// ref: ParseUnnamedType
//
//   ::= LocalVarID '=' 'type' type

// ref: ParseNamedType
//
//   ::= LocalVar '=' 'type' type

TypeDef
	: LocalIdent "=" "type" OpaqueType   << ast.NewTypeDef($0, $3) >>
	| LocalIdent "=" "type" Type         << ast.NewTypeDef($0, $3) >>
;

OpaqueType
	: "opaque"   << ast.OpaqueType{}, nil >>
;

